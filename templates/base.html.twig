<script>
    function genererDOCX() {
        // Récupérer les valeurs du formulaire
        var nom = document.getElementById('nom').value;
        var prenom = document.getElementById('prenom').value;
        var email = document.getElementById('email').value;

        // Modèle DOCX
        var template = "Nom: {nom}\nPrénom: {prenom}\nEmail: {email}";

        // Préparer les données pour le modèle
        var data = {
            nom: nom,
            prenom: prenom,
            email: email
        };

        // Utiliser docxtemplater pour remplir le modèle
        var doc = new Docxtemplater();
        doc.loadZip(new JSZip(template));
        doc.setData(data);

        // Générer le document DOCX
        doc.render();

        // Télécharger le fichier
        var blob = doc.getZip().generate({ type: "blob" });
        saveAs(blob, "inscription.docx");
    }
</script>
