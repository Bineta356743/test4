{% extends 'base.html.twig' %}

{% block body %}
<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #050b17;  /* Nouvelle couleur d'arrière-plan */
        color: #ffffff;  /* Couleur du texte */
    }

    .container {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
        background-color: #050b17;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
        padding: 40px;
        border-radius: 12px;
        margin-top: 40px;
        color: #ffffff; /* Set text color for paragraphs */
    }

    h2 {
        color: #007bff;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        display: block;
        margin-bottom: 5px;
        color: #ffffff; /* Set label text color to white */
    }

    input {
        width: 100%;
        padding: 8px; /* Reduced padding for input fields */
        box-sizing: border-box;
        border: 1px solid #ccc;
        border-radius: 4px;
        margin-top: 5px;
        margin-bottom: 10px; /* Reduced margin for input fields */
        color: #ffffff; /* Set text color for input fields to white */
    }

    button {
        background-color: #050b17;
        color: #fff;
        padding: 10px 15px;
        font-size: 16px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    button:hover {
        background-color: #0056b3;
    }
</style>

<div class="container" id="inscription">
    <h2>Inscription</h2>
    <form id="inscriptionForm">
        <div class="form-group">
            <label for="nom">Nom :</label>
            <input type="text" class="form-control" id="nom" name="nom" required>
        </div>
        <div class="form-group">
            <label for="prenom">Prénom :</label>
            <input type="text" class="form-control" id="prenom" name="prenom" required>
        </div>
        <div class="form-group">
            <label for="email">Email :</label>
            <input type="email" class="form-control" id="email" name="email" required>
        </div>
        <button type="button" class="btn btn-primary" onclick="genererPDF()">Générer PDF</button>
    </form>
</div>
{% endblock %}