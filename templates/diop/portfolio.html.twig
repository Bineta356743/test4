{% extends 'base.html.twig' %}

{% block title %}Bineta's Portfolio{% endblock %}

{% block body %}
<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #050b17;
        color: #ffffff; /* Set text color for the entire body */
    }

    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        background-color: #050b17;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
        border-radius: 12px;
        margin-top: 40px;
